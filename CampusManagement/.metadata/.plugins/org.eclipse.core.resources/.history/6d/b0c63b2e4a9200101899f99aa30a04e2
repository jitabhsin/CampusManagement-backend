package edu.infosys.lostAndFoundApplication.bean;
import java.time.LocalDate;
import java.time.LocalDateTime;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;

@Entity
public class Match {

	  @Id
	  @GeneratedValue(strategy = GenerationType.IDENTITY)
	  private int id;
	  
	  @ManyToOne
	  @JoinColumn(name = "lostItem", referencedColumnName = "id")
	  private LostFoundItem lostItem;
	  
	  @ManyToOne
	  private LostFoundItem foundItem;
	  
	  private float matchScore;
	   
	  private String status;
	
	  private LocalDateTime createdAt;

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public LostFoundItem getLostItem() {
		return lostItem;
	}

	public void setLostItem(LostFoundItem lostItem) {
		this.lostItem = lostItem;
	}

	public LostFoundItem getFoundItem() {
		return foundItem;
	}

	public void setFoundItem(LostFoundItem foundItem) {
		this.foundItem = foundItem;
	}

	public float getMatchScore() {
		return matchScore;
	}

	public void setMatchScore(float matchScore) {
		this.matchScore = matchScore;
	}

	public String getStatus() {
		return status;
	}

	public void setStatus(String status) {
		this.status = status;
	}

	public LocalDateTime getCreatedAt() {
		return createdAt;
	}

	public void setCreatedAt(LocalDateTime createdAt) {
		this.createdAt = createdAt;
	}

	public Match(int id, LostFoundItem lostItem, LostFoundItem foundItem, float matchScore, String status,
			LocalDateTime createdAt) {
		super();
		this.id = id;
		this.lostItem = lostItem;
		this.foundItem = foundItem;
		this.matchScore = matchScore;
		this.status = status;
		this.createdAt = createdAt;
	}

	@Override
	public String toString() {
		return "Match [id=" + id + ", lostItem=" + lostItem + ", foundItem=" + foundItem + ", matchScore=" + matchScore
				+ ", status=" + status + ", createdAt=" + createdAt + "]";
	}
	    
}
